#include <iostream>
using namespace std;

int main() {
	long double x = 10, sum = 1, term = 1, temp = 0;
	 long double i = 0;

	 while (temp != sum) {
	 i++;
	 term = term * x / i;
	 temp = sum;
	 sum = sum + term;
	 cout<<"\n"<<i<<" "<<term<<" "<<sum<<" ";
	 }
	return 0;
}
